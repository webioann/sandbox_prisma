datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model user {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  username     String
  email        String
  password     String
  image        String
  provider     Provider
  created      DateTime @default(now())
}
enum Provider {
  google
  credentials
}
model Todo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
}


enum Role {
  USER
  ADMIN
}